{
    "files.exclude": {
        "**/.ng": true,
        "**/.vscode": true,
        "**/.gitkeep": true,
        "**/node_modules": true,
        "**/src/assets/manifest*.json": true,
        "**/build": true
    },
    "typescript.tsdk": "node_modules/typescript/lib",
    "json.schemas": [
        {
            "fileMatch": [
                "/manifest.json"
            ],
            "url": "/node_modules/@exlibris/exl-cloudapp-base/manifest.schema.json"
        }
    ],
    "workbench.colorCustomizations": {
        "activityBar.background": "#0A3511",
        "titleBar.activeBackground": "#0E4B18",
        "titleBar.activeForeground": "#F2FCF3"
    }
    
}